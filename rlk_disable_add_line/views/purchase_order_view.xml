<odoo>

    <!-- Inherit Purchase Order Line tree -->
    <record id="view_purchase_order_tree_inherit" model="ir.ui.view">
        <field name="name">purchase.order.tree.inherit.delete</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="delete">false</attribute>
            </xpath>

            <xpath expr="//field[@name='price_total']" position="after">
                <button name="unlink" type="object" icon="fa-trash" string=" " invisible="state != 'draft'"/>
            </xpath>
        </field>
    </record>

</odoo>
