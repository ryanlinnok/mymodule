<odoo>

    <record id="view_sale_order_tree_inherit" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit.delete</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

             <xpath expr="//field[@name='order_line']/tree" position="attributes">
                <attribute name="delete">false</attribute>
            </xpath>

            <xpath expr="//field[@name='price_total']" position="after">
                <button name="unlink" type="object" icon="fa-trash" string=" " invisible="state != 'draft'"/>
            </xpath>
        </field>
    </record>

</odoo>
